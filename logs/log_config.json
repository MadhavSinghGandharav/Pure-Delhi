{
  "version": 1,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s (%(filename)s)- %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "file_handler": {
      "class": "logging.FileHandler",
      "formatter": "simple",
      "filename": "logs/app.log",
      "level": "DEBUG"
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["file_handler"]
  }
}
